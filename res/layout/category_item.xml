<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    
    >

     <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/categoryTextVw"
        android:layout_toStartOf="@+id/categoryTextVw"
        android:src="@drawable/ic_launcher"
        android:contentDescription="@string/title_item_CatgoryImage" />

    <TextView
        android:id="@+id/categoryTextVw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextFieldFont"
        android:textSize="18sp"
        android:layout_margin="5sp" />
     	  
</RelativeLayout>
