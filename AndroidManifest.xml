<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.training.myfirstapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18"
        android:maxSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/pictuary_bg"
        android:label="@string/app_name"
        android:theme="@style/MyActionBar" >
        <activity
            android:name="com.training.myfirstapp.MainFirstActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.training.myfirstapp.DisplayActivity"
            android:label="@string/title_activity_main" 
            android:parentActivityName="com.training.myfirstapp.MainFirstActivity">
            <meta-data 
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.training.myfirstapp.MainFirstActivity"/>
        </activity>
        
    </application>

</manifest>
